<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context=".Payment_page">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/booking_background"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/payment_back"
                android:layout_width="56dp"
                android:layout_height="61dp"
                android:background="@drawable/back" />

            <TextView
                android:id="@+id/textView24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Payment"
                android:textColor="@color/design_default_color_on_primary"
                android:textSize="36sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/design_default_color_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0px"
                app:cardUseCompatPadding="false">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Booking Information"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Hotel Name:"
                                android:textColor="@color/design_default_color_on_secondary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/payment_hotel_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Hotel Name"
                                android:textColor="@color/design_default_color_on_secondary"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Location:"
                                android:textColor="@color/design_default_color_on_secondary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/payment_hotel_location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Location"
                                android:textColor="@color/design_default_color_on_secondary"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="150dp"
                                android:layout_height="wrap_content"
                                android:text="Time:"
                                android:textColor="@color/design_default_color_on_secondary"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/payment_booking_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Time"
                                android:textColor="@color/design_default_color_on_secondary"
                                android:textSize="18sp" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/textView19"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/payment_total_cost"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total price"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />

                        <View
                            android:id="@+id/view3"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/black" />

                        <TextView
                            android:id="@+id/Payment_price_display"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="PRICE_DISPLAY"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="30sp" />
                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/design_default_color_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0px"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Personal Information"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView17"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Name:"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/payment_buyer_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView18"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Email:"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/payment_buyer_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView20"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            android:text="Phone no.:"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/payment_phone_number"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:shadowColor="@color/design_default_color_on_secondary"
                            android:text="Phone Number"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView21"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:text="Passport:"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/payment_buyer_passport"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Passport"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="18sp" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/textView23"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="For security reasons, some words will be hidden, you may edit/look your informaion by clicking the button below" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <Button
                        android:id="@+id/payment_edit_or_read_key"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Edit / Read" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/design_default_color_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0px"
                app:cardUseCompatPadding="false">

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/design_default_color_surface"
                app:cardCornerRadius="12dp"
                app:cardElevation="0px"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/payment_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Click the payment method below:"
                        android:textColor="@color/design_default_color_on_secondary"
                        android:textSize="18sp" />

                    <View
                        android:id="@+id/view9"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <TextView
                        android:id="@+id/coupon_code_tips"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/coupon_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ems="10"
                            android:hint="If you have coupon code, input here"
                            android:inputType="textPersonName"
                            android:textSize="14dp" />

                        <Button
                            android:id="@+id/coupon_key"
                            android:layout_width="135dp"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:text="Apply a coupon code"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view12"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/black" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/pps"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/pps" />

                        <View
                            android:id="@+id/view10"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/black" />

                        <Button
                            android:id="@+id/credit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/visa" />

                        <View
                            android:id="@+id/view11"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@android:color/black" />

                        <Button
                            android:id="@+id/paypal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/paypal" />
                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>